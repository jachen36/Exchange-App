<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.1"
        android:layout_marginLeft="@dimen/main_activity_side_margin"
        android:layout_marginRight="@dimen/main_activity_side_margin">

        <!--TODO: Remove the start dummy title. Or keep it as temp-->
        <TextView
            android:id="@+id/start_currency_title"
            android:text="@string/start_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:textSize="30sp"/>

        <!-- TODO: Try using autoFitTextView which seem pretty simply-->
        <TextView
            android:id="@+id/start_currency_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="bottom|right"
            android:textSize="42sp"
            android:hint="@string/start_currency_hint"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:layout_marginTop="@dimen/bank_market_rate_margin"
        android:layout_marginBottom="@dimen/bank_market_rate_margin"
        android:layout_marginLeft="@dimen/main_activity_side_margin"
        android:layout_marginRight="@dimen/main_activity_side_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank"
            android:textSize="16sp"/>


        <!-- TODO: Remove edittext line by providing a transparent background -->
        <!-- TODO: Try to remove focus from the text after done is pressed -->
        <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="2"-->
            <!--android:text="@string/temp_bank_rate"-->
            <!--android:textSize="22sp"-->
            <!--android:gravity="center"/>-->

        <EditText
            android:id="@+id/bank_rate_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="@string/rate"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="0dp"
            android:selectAllOnFocus="true"
            android:cursorVisible="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/market"
            android:textSize="16sp"/>

        <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="2"-->
            <!--android:hint="@string/rate"-->
            <!--android:textSize="20sp"-->
            <!--android:gravity="center"-->
            <!--android:maxLength="7"-->
            <!--android:editable="true"-->
            <!--android:inputType="numberDecimal"-->
            <!--android:focusableInTouchMode="true"/>-->

        <EditText
            android:id="@+id/market_rate_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="@string/rate"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="0dp"
            android:selectAllOnFocus="true"
            android:cursorVisible="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_rate"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exchange_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/temp_difference_rate"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/main_activity_side_margin"
        android:layout_marginRight="@dimen/main_activity_side_margin">

        <!--TODO: Remove the end dummy title. Or keep it as temp-->
        <TextView
            android:id="@+id/end_currency_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_currency"
            android:gravity="bottom"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/end_currency_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="42sp"
            android:text="@string/end_currency_hint"
            android:gravity="bottom|right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- TODO: Nested weights are bad for performance so try relativelayout
                 TODO: Also try using android studio's design tool to see how they program the layout-->
            <Button
                android:id="@+id/button_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_seven"
                android:background="@drawable/button_number_selector" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_eight"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_nine"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_clear"
                android:background="@drawable/button_function_selector"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_four"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_five"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_six"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_back"
                android:background="@drawable/button_function_selector"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_one"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_two"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_three"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_switch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_switch"
                android:background="@drawable/button_function_selector"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/button_zero"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_decimal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_decimal"
                android:background="@drawable/button_number_selector"/>

            <Button
                android:id="@+id/button_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_equal"
                android:background="@drawable/button_function_selector"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
