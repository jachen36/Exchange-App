<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jacintochen.currencyexchange.AddActivityFragment">

    <!--TODO: Change the cursor color to something darker.-->
    <!--TODO: Set max text size -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_currency_1"
        style="@style/add_text_size"/>

    <EditText
        android:id="@+id/add_currency_1_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/add_edit_text"
        android:maxLength="@integer/max_currency_name_length"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_currency_2"
        style="@style/add_text_size"
        android:layout_marginTop="@dimen/add_fragment_marginTop"/>

    <EditText
        android:id="@+id/add_currency_2_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/add_edit_text"
        android:maxLength="@integer/max_currency_name_length"
        android:inputType="text"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/add_fragment_marginTop">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_bank_rate"
            style="@style/add_text_size"/>

        <EditText
            android:id="@+id/add_bank_rate_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/add_edit_text"
            android:maxLength="@integer/max_rate_length"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/add_fragment_marginTop">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_market_rate"
            style="@style/add_text_size"/>

        <EditText
            android:id="@+id/add_market_rate_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/add_edit_text"
            android:maxLength="@integer/max_rate_length"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/add_fragment_marginTop">

        <!--TODO: add some margin between the buttons-->
        <Button
            android:id="@+id/add_submit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_add_button"
            android:textSize="22sp"
            android:background="@drawable/button_main_selector"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/add_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_cancel_button"
            android:textSize="22sp"
            android:background="@drawable/button_cancel_selector"/>

    </LinearLayout>

</LinearLayout>
