<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Calculator design -->
    <style name="primary_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondary_text">
        <item name="android:textColor">@color/white_secondary</item>
    </style>

    <style name="calculator_currency_title" parent="primary_text">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="calculator_currency_number" parent="primary_text">
        <item name="android:textSize">42sp</item>
    </style>

    <style name="calculator_rate_title" parent="secondary_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="calculator_rate_edit" parent="primary_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/white_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">7</item>
        <item name="android:hint">@string/rate</item>
        <item name="android:padding">@dimen/rate_edittext_padding</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="calculator_button">
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/button_number_selector</item>
    </style>


    <!-- Sell Design -->
    <style name="sell_text_size">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="sell_edit_text" parent="sell_text_size">
        <item name="android:gravity">right</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionNext</item>
    </style>



</resources>
